<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <!-- Contenedor principal para centrar contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Columna de contenido con ancho máximo para tablets -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:maxWidth="560dp"
            android:layout_gravity="center">

            <!-- Ícono/imagen arriba -->
            <ImageView
                android:id="@+id/imgNuevoGasto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtTituloGasto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo Gasto"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/edtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:inputType="textCapSentences|text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtMonto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monto"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp" />

            <!-- Spinner de categoría -->
            <Spinner
                android:id="@+id/spinnerCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edtFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha (YYYY-MM-DD)"
                android:inputType="date"
                android:layout_marginBottom="24dp" />

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnGuardarGasto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#6C63FF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FF6969" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
